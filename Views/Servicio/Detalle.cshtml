<div class="container">
    <h1 class="text-center">Registrar Servicio</h1>
    <form method="POST" action="">
        <div class="form-group">
            <label for="">Tipo de Servicio: </label>
            <select name="" id="" class="form-control">

            </select>
        </div>
        <div class="form-group">
            <label for="">Descripcion: </label>
            <input type="text" class="form-control" placeholder="Marca, detalles, color, etc.">
        </div>
        <div class="form-group">
            <label for="">Precio:</label>
            <input type="text" class="form-control" placeholder="Precio S/.">
        </div>
        <div class="form-group text-center">
            <div class="row">
                <div class="col">
                    <input type="submit" value="Agregar" class="btn btn-success">
                </div>
                <div class="col">
                    <input type="submit" value="Cancelar" class="btn btn-warning">
                </div>
            </div>
        </div>
    </form>

    @if(ViewBag.axcel != null)
    {
        <h2>@ViewBag.axcel</h2>
    }
</div>