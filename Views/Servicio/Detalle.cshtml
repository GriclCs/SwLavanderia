@model Servicio
<div class="container">
    <h1 class="text-center">Registrar Servicio</h1>
    <div class="row">
        <div class="col">
            @* Nro boleta: @Model.ticket.TkNroBoleta *@
        </div>
        <div class="col">
            xd
        </div>
    </div>
    <form method="POST">
        <div class="form-group">
            <label for="">Tipo de Servicio: </label>
            <select asp-for="serviciosDisponiblesId" asp-items="ViewBag.ServiciosDisponibles" class="form-control"></select>
        </div>
        <div class="form-group">
            <label for="">Descripcion: </label>
            <input asp-for="DescServicio" class="form-control" placeholder="Marca, detalles, color, etc.">
        </div>
        <div class="form-group">
            <label for="">Precio:</label>
            <input asp-for="PrecServicio" class="form-control" placeholder="Ej: S/.0.00">
        </div>
        <div class="form-group text-center">
            <div class="row">
                <div class="col">
                    <button class="btn btn-success"><a asp-action="Detalle" asp-route-idboleta="@ViewBag.idboleta">Agregar (manda a detalle)</a></button>
                </div>
                <div class="col">
                    <input type="submit" value="Cancelar" class="btn btn-warning">
                </div>
            </div>
        </div>
    </form>
</div>